<!doctype html>
<html lang="en">
    <head>
        <title>Dashboard</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <style>
            body {
                min-height: 100vh;
                background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
                font-family: "Segoe UI", system-ui, sans-serif;
            }

            /* Custom Card Styling */
            .dashboard-card {
                background: rgba(255, 255, 255, 0.95);
                border-radius: 12px;
                box-shadow: 0 10px 30px rgba(0,0,0,0.25);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                border: none;
                overflow: hidden; /* Keeps image corners rounded */
            }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            }

            .nav-brand {
                font-weight: 600;
                letter-spacing: 0.5px;
            }

            .price-tag {
                font-size: 1.25rem;
                font-weight: 700;
                color: #198754;
            }
        </style>
    </head>

    <body class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 p-3">
                <a class="navbar-brand nav-brand" href="/">Product Dashboard</a>

                <div class="ms-auto">
                    <% if (!user) { %>
                        <a href="/login" class="btn btn-outline-success me-2">Login</a>
                    <% } else { %>
                        <span class="navbar-text text-light me-3">Hello, <%= user.username %></span>
                        <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
                    <% } %>
                </div>
            </nav>
        </header>

        <main class="flex-fill">
            <div class="container my-5">
                
                <% if (user) { %>
                    <div class="d-flex justify-content-end mb-4">
                        <a class="btn btn-success btn-lg shadow" href="/add">
                            + Add New Product
                        </a>
                    </div>
                <% } %>

                <div class="row row-cols-1 row-cols-md-3 g-4">
                    
                    <% products.forEach(p => { %>
                        <div class="col">
                            <div class="card h-100 dashboard-card">
                                <img 
                                    src="<%= p.pimg %>" 
                                    class="card-img-top" 
                                    alt="<%= p.pname %>"
                                    style="height: 220px; object-fit: cover;"
                                >
                                
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title fw-bold mb-0"><%= p.pname %></h5>
                                        <span class="badge bg-dark"><%= p.category %></span>
                                    </div>
                                    
                                    <p class="price-tag mb-3">â‚¹<%= p.price %></p>
                                    
                                    <p class="card-text text-muted small mt-auto">
                                        Added by: <strong><%= p.staffName?.username || "N/A" %></strong>
                                    </p>
                                </div>

                                <% if (user && user.role === "admin") { %>
                                    <div class="card-footer bg-transparent border-top-0 pb-3">
                                        <div class="d-flex gap-2">
                                            <a href="/edit/<%= p.id %>" class="btn btn-warning flex-grow-1">Edit</a>
                                            
                                            <form 
                                                action="/delete/<%= p.id %>?_method=delete" 
                                                method="post" 
                                                class="flex-grow-1"
                                                onsubmit="return confirm('Are you sure you want to delete <%= p.pname %>?')"
                                            >
                                                <button type="submit" class="btn btn-danger w-100">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                <% } %>
                                
                            </div>
                        </div>
                    <% }) %>

                </div> </div>
        </main>

        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            crossorigin="anonymous"
        ></script>
        <%- include("partials/footer") %>
    </body>
</html>